<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative_discount_list_item"
        android:padding="8dp"
        android:background="#d2d2b5">

        <TextView
            android:id="@+id/rest_name_discount_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Restaurant Name"
            android:textColor="#000"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rest_address_discount_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rest_name_discount_list_item"
            android:text="@string/Boston_01_address"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/start_date_discount_list_item"
            android:layout_width="157dp"
            android:layout_height="32dp"
            android:layout_marginTop="90dp"
            android:text="12/12/2018"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:text="To"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/end_date_discount_list_item"
            android:layout_width="157dp"
            android:layout_height="32dp"
            android:layout_alignEnd="@+id/rest_name_discount_list_item"
            android:layout_alignTop="@+id/start_date_discount_list_item"
            android:text="12/12/2018"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/start_time_discount_list_item"
            android:layout_width="157dp"
            android:layout_height="32dp"
            android:layout_marginTop="140dp"
            android:text="00:00"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#000"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:text="To"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/end_time_discount_list_item"
            android:layout_width="157dp"
            android:layout_height="32dp"
            android:layout_alignEnd="@+id/rest_name_discount_list_item"
            android:layout_marginTop="140dp"
            android:text="00:00"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/people_need_tv"
            android:layout_width="157dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/rest_name_discount_list_item"
            android:layout_marginTop="190dp"
            android:text="People need:"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/people_num_discount_list_item"
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:layout_alignTop="@+id/people_need_tv"
            android:layout_centerHorizontal="true"
            android:text="00"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#000"/>


    </RelativeLayout>


</RelativeLayout>